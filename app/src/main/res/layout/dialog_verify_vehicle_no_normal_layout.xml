<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivFailedIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_error_24px"
        app:tint="@color/main_red" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:text="車身號碼有誤"/>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:textSize="12sp"
        android:gravity="center"
        android:text="驗車失敗，驗證失敗\n提醒悠車身號碼若輸入錯誤2次，為確保服務正常運作
系統會將行照上傳為必填項目"
        />

    <TextView
        android:id="@+id/tvErrorCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="14dp"
        android:textSize="12sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvUploadMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:textSize="12sp"
        android:textColor="@color/brand_red"
        android:gravity="center"
        android:text="**請上傳行照**"/>

    <Button
        android:id="@+id/btDismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/main_blue"
        android:textSize="16sp"
        android:text="好的"/>


</LinearLayout>