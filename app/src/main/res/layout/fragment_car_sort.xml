<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.CarSortFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingVertical="8dp"
        >
        <LinearLayout
            android:id = "@+id/ll_sort_lastday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="6dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_bottom_border_light_grey"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src = "@drawable/ic_sort_date"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:textSize="22dp"
                android:text="最後編輯日期" />
            <ImageView
                android:id = "@+id/iv_sort_lastday_checked"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src = "@drawable/ic_sort_checked"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sort_carID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="6dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_bottom_border_light_grey"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src = "@drawable/ic_sort_carid"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:textSize="20dp"
                android:text="車輛ID" />
            <ImageView
                android:id = "@+id/iv_sort_id_checked"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src = "@drawable/ic_sort_checked"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sort_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="6dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_bottom_border_light_grey"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src = "@drawable/ic_sort_price"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:textSize="20dp"
                android:text="價格" />
            <ImageView
                android:id = "@+id/iv_sort_price_checked"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src = "@drawable/ic_sort_checked"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sort_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="6dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src = "@drawable/ic_sort_status"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:textSize="20dp"
                android:text="車輛狀態" />
            <ImageView
                android:id = "@+id/iv_sort_status_checked"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src = "@drawable/ic_sort_checked"
                android:visibility="gone"
                />
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>