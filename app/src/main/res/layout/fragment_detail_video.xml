<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingHorizontal="2dp">

        <ImageView
            android:id="@+id/iv_detail_spec_index"
            android:layout_width="2dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_detail_index_src" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:text="車輛影片"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:src="@color/mid_gray" />

    </LinearLayout>

<!--    <VideoView-->
<!--        android:id="@+id/vv_detail"-->
<!--        android:layout_width="@dimen/detail_car_width"-->
<!--        android:layout_height="@dimen/detail_car_height"-->
<!--        android:layout_gravity="center_horizontal" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_car_height"
        >
        <TextView
            android:id="@+id/tv_detail_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20dp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

</LinearLayout>