        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "聯絡人資料:"
        android:textSize="26dp"
        android:textStyle="bold"
        />
    <ListView
        android:id ="@+id/lv_detail_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        >
    </ListView>
</LinearLayout>
