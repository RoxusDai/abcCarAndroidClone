<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="3dp"
    >
    <ImageView
        android:id = "@+id/iv_detail_spec_index"
        android:layout_width="2dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"

        android:src ="@drawable/bg_detail_index_src"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id ="@+id/tv_detail_spec_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@id/iv_detail_spec_index"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:text = "出廠年月"
        android:textSize="14dp"
        />
    <TextView
        android:id = "@+id/tv_detail_spec_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@id/iv_detail_spec_index"
        android:layout_below="@id/tv_detail_spec_label"
        android:textSize="12dp"
        android:text = "2012年1月"
        />


</RelativeLayout>