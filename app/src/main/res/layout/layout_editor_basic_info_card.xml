<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STEP 1- 基本資料- 請按照順序選填"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        app:cardCornerRadius="@dimen/view_editor_card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id = "@+id/ll_basic_info_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_bottom_border_light_grey">

                <TextView
                    android:id="@+id/tvBrandStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"

                    android:text="*"
                    android:textColor="@color/brand_red"
                    android:textSize="@dimen/view_editor_text_size"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:text="物件廠牌"
                    android:textSize="@dimen/view_editor_text_size"/>

                <TextView
                    android:id="@+id/tvBrandValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="請選擇廠牌"
                    android:textSize="@dimen/view_editor_text_size"
                    android:textColor="@color/view_editor_value_text_color"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:id = "@+id/ll_basic_info_series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_bottom_border_light_grey">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:text="*"
                    android:textColor="@color/brand_red"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/view_editor_item_padding"
                    android:text="物件車型"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:id="@+id/tvSeriesValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="請先選擇廠牌"
                    android:textColor="@color/view_editor_value_text_color"
                    android:gravity="end"
                    android:textSize="@dimen/view_editor_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_bottom_border_light_grey">

                <TextView
                    android:id="@+id/tvManufactureStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:text="*"
                    android:textColor="@color/brand_red"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/view_editor_item_padding"
                    android:text="出廠年月"
                    android:textSize="@dimen/view_editor_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tvManufactureYearValue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="24dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/bg_gray_bottom_raduis16"
                        android:gravity="center"
                        android:text="- - -"
                        android:textColor="@color/view_editor_value_text_color"
                        android:textSize="@dimen/view_editor_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="年"
                        android:gravity="center"
                        android:textSize="@dimen/view_editor_text_size" />

                    <TextView
                        android:id="@+id/tvManufactureMonthValue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="24dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/bg_gray_bottom_raduis16"
                        android:text="- - -"
                        android:gravity="center"
                        android:textColor="@color/view_editor_value_text_color"
                        android:textSize="@dimen/view_editor_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="月"
                        android:gravity="center"
                        android:textSize="@dimen/view_editor_text_size" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id ="@+id/ll_basic_info_caetgory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_bottom_border_light_grey">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:text="*"
                    android:textColor="@color/brand_red"
                    android:visibility="invisible"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/view_editor_item_padding"
                    android:text="物件車款"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:id="@+id/tvCategoryValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="請選擇年份"
                    android:textColor="@color/view_editor_value_text_color"
                    android:gravity="end"
                    android:textSize="@dimen/view_editor_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_bottom_border_light_grey">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:text="*"
                    android:textColor="@color/brand_red"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/view_editor_item_padding"
                    android:text="傳動系統"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:id="@+id/tvTransmissionValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:textColor="@color/view_editor_value_text_color"
                    android:gravity="end"
                    android:textSize="@dimen/view_editor_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_bottom_border_light_grey">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:text="*"
                    android:textColor="@color/brand_red"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/view_editor_item_padding"
                    android:text="變速系統"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:id="@+id/tvGearValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:textColor="@color/view_editor_value_text_color"
                    android:gravity="end"
                    android:textSize="@dimen/view_editor_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_bottom_border_light_grey">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:text="*"
                    android:textColor="@color/brand_red"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/view_editor_item_padding"
                    android:text="燃油種類"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:id="@+id/tvGasValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:textColor="@color/view_editor_value_text_color"
                    android:gravity="end"
                    android:textSize="@dimen/view_editor_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_bottom_border_light_grey">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:text="*"
                    android:textColor="@color/brand_red"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/view_editor_item_padding"
                    android:text="排氣量"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:id="@+id/tvEngineDisplacementValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:gravity="end"
                    android:textSize="@dimen/view_editor_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_bottom_border_light_grey">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:text="*"
                    android:textColor="@color/brand_red"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/view_editor_item_padding"
                    android:text="乘坐人數"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:id="@+id/tvPassengerValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:gravity="end"
                    android:textSize="@dimen/view_editor_text_size" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:text="*為必填欄位"
        android:textColor="@color/brand_red"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="2dp"
        app:cardCornerRadius="@dimen/view_editor_card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_bottom_border_light_grey">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:text="*"
                    android:textColor="@color/brand_red"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/view_editor_item_padding"
                    android:text="外觀顏色"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:id="@+id/tvColorValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:textColor="@color/view_editor_value_text_color"
                    android:gravity="end"
                    android:textSize="@dimen/view_editor_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:text="*"
                    android:textColor="@color/brand_red"
                    android:textSize="@dimen/view_editor_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/view_editor_item_padding"
                    android:text="里程數"
                    android:textSize="@dimen/view_editor_text_size" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edMileageValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp"
                        android:digits="0123456789"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/view_editor_text_size"
                        android:hint="輸入里程數"
                        android:gravity="center_vertical"
                        android:background="@null"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvMileageUnit"/>

                    <TextView
                        android:id="@+id/tvMileageUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公里"
                        android:gravity="end"
                        android:textSize="@dimen/view_editor_text_size"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/edMileageValue"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>